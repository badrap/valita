{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "noImplicitReturns": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./dist/main",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": ["mod.ts", "src/**/*.ts", "tests/**/*.ts"]
}
