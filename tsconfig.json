{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noImplicitReturns": true,
    "declaration": true,
    "isolatedModules": true,
    "outDir": "./dist/main",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": ["mod.ts", "src/**/*", "tests/**/*"]
}
